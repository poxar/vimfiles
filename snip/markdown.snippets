extends html

snippet +++ "Frontmatter" b
+++
${1:title = "${2:Title}"
lang = "${3:en}"
date = ${4:`!v strftime("%Y-%m-%d")`}}
+++

$0
endsnippet
snippet link "Link"
[${1:${VISUAL:Text}}](${3:http://${2:www.url.com}})$0
endsnippet
snippet img "Image"
![${1:pic alt}](${2:path}${3/.+/ "/}${3:opt title}${3/.+/"/})$0
endsnippet
snippet fnt "Footnote"
[^${1:${VISUAL:Footnote}}]$0

[^$1]:${2:Text}
endsnippet
