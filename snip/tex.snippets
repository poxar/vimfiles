# TeX/LaTeX snippets
priority -20

# this breaks the highlighting, but it works :)
snippet ""
"\`${1:${VISUAL}}"'${0}
endsnippet

# extended begin snippet
snippet "b(egin)?" "begin{} / end{}" br
\begin{${1:something}}${2:options}
	${0:${VISUAL}}
\end{$1}
endsnippet

snippet def "Definiton" b
\begin{defi}[${1:description}]\label{def:${2:${1/\\\w+\{(.*?)\}|\\(.)|(\w+)|([^\w\\]+)/(?4:_:\L$1$2$3\E)/ga}}}
${0}
\end{defi}
endsnippet

